---
import '../styles/global.css';
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" sizes="any" />
    <link rel="apple-touch-icon" href="/logo.svg" />
    <title>404 — Page non trouvée</title>
  </head>
  <body>
    <main class="min-h-screen w-full relative overflow-hidden flex items-center justify-center px-4" style="background: linear-gradient(180deg, #e8d4ff 0%, #f0e8ff 50%, #e8f4ff 100%);">
      
      <!-- Contenu principal centré -->
      <div class="relative z-10 flex flex-col items-center gap-4 max-w-2xl w-full">
        
        <!-- Nœud décoratif en haut -->
        <img src="/noeud.webp" alt="nœud" class="w-32 md:w-40 lg:w-48 h-auto opacity-90" />
        
        <!-- Titre 404 -->
        <h1 class="title-font text-center text-6xl md:text-7xl lg:text-8xl text-black italic leading-tight my-2">
          404
        </h1>
        
        <!-- Message -->
        <p class="title-font text-center text-xl md:text-2xl lg:text-3xl text-black italic leading-relaxed mt-2 px-4">
          Cette page n'existe que dans votre imagination
        </p>
        
        <!-- Logo -->
        <img src="/logo.webp" alt="Maelie Addario logo" class="w-32 md:w-40 lg:w-48 h-auto mt-8 mb-4" />
        
        <!-- Texte Portfolio -->
        <p class="text-sm md:text-base text-black">
          Portfolio-Maëlie ADDARIO-2025
        </p>
        
        <!-- Bouton retour Home avec flèche -->
        <a href="/" class="mt-6 flex items-center gap-2 hover:opacity-70 transition-opacity">
          <svg width="24" height="24" viewBox="0 0 30 30" class="md:w-8 md:h-8" style="transform: rotate(180deg);">
            <path d="M10 7.5 L20 15 L10 22.5" stroke="#000000" stroke-width="2.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="title-font italic text-xl md:text-2xl lg:text-3xl text-black">Retour à l'accueil</span>
        </a>
      </div>
    </main>
  </body>
</html>
