---
interface Props {
  id: string;
  imageUrl: string;
  titre: string;
  collectionId: string;
  recordId: string;
}

const { id, imageUrl, titre, collectionId, recordId } = Astro.props;
---

<a href={`/projet/${id}`} class="projet-card">
  <div class="image-container">
    <img src={imageUrl} alt={titre} class="cd-image" />
    <div class="overlay">
      <p class="title-font overlay-text">{titre}</p>
    </div>
  </div>
</a>

<style>
  .projet-card {
    display: block;
    position: relative;
    cursor: pointer;
    text-decoration: none;
  }

  .image-container {
    position: relative;
    width: 100%;
    max-width: 320px;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 12px;
    background: linear-gradient(135deg, #BA393D 0%, #8B2428 50%, #5A1518 100%);
    box-shadow: 0 6px 20px rgba(186, 57, 61, 0.4);
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .image-container {
      max-width: 280px;
    }
  }

  @media (max-width: 640px) {
    .image-container {
      max-width: 240px;
    }
  }

  .image-container:hover {
    transform: scale(1.08) translateY(-5px);
    box-shadow: 0 12px 30px rgba(186, 57, 61, 0.6);
  }

  .cd-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .image-container:hover .cd-image {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0) 100%
    );
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .image-container:hover .overlay {
    opacity: 1;
  }

  .overlay-text {
    font-size: 1.4rem;
    color: #ffffff;
    font-style: italic;
    text-align: center;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    margin: 0;
  }
</style>
